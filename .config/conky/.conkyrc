# this file goes in ~

background yes
use_xft yes
xftfont monofur:pixelsize=11
xftalpha 1
update_interval 1.0
total_run_times 0
own_window yes
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
double_buffer yes
draw_shades no
draw_outline no
draw_borders yes
draw_graph_borders no
stippled_borders 0
border_margin 0
border_width 0
default_color cyan
default_shade_color black
default_outline_color white
alignment top_left
gap_x 10
gap_y 15
no_buffers yes
cpu_avg_samples 2
net_avg_samples 2
override_utf8_locale yes
use_spacer yes
own_window_type override

maximum_width 1080

color3 dca014 #jaune
color1 cyan
color2 DC143C #rouge

TEXT
$font${color3} ${nodename} 

$font ${color1} Kernel ${color1} [${color2}${color2} ${exec uname -r | cut -c 1-14} ${color1}]${color} 
$font ${color1} Uptime ${color1} [${color2} $uptime ${color1}]${color1} 
$font ${color1} Battery [${color2} ${battery BAT0} ${color1}]${color} 

$font ${color1} Eth    [ ${color2}${addr enp1s0} ${color1}]
$font ${color1} Wifi   [ ${color2}${addr wlp2s0} ${color1}]
$font ${color1} Public [ ${color2}${exec curl -s www.icanhazip.com} ${color1}] 
$font ${color1} Tor    [ ${color2}${exec torsocks curl -s www.icanhazip.com} ${color1}]
$font ${color1} Proxy  [ ${color2}${exec proxychains4 curl -s www.icanhazip.com} ${color1}]

$font ${color1} Connections  [${color2} ${tcp_portmon 1 65535 count} ${color1}]${color}       
$font ${color1} in / locale  [${color2} ${tcp_portmon 1 32767 count} ${color1}]${color}        
$font ${color1} out / remote [${color2} ${tcp_portmon 32768 61000 count} ${color1}]${color}     
$font ${color1} up [${color2}${upspeed wlp2s0}k/s${color1}]${color}$font ${color1}${color2} ${upspeedgraph wlp2s0 8,120 DC143C DC143C} ${color1}${color}    
      
$font ${color1} down [${color2}${downspeed wlp2s0}k/s${color1}]${color}$font ${color1}${color2} ${downspeedgraph wlp2s0 8,120 DC143C DC143C} ${color1}${color}      
            

${color3}${execi 15 ss -t -a | grep -e "ESTAB" -e "9050" | tail -n 8 | sed 's/^/├─  /' | sed 's/.$/─┤/'}





