#audio control
bindsym XF86AudioRaiseVolume exec "amixer -q sset Master,0 1+ unmute; notify-send 'volume +'"
bindsym XF86AudioLowerVolume exec "amixer -q sset Master,0 1- unmute; notify-send 'volume -'"
